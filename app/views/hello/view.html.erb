<!-- window title -->
<% provide(:title, 'MIKAN') %>

<!-- top-bar -->
<div class="fixed">
	<nav class="top-bar" data-topbar>
		<!-- <ul class="title-area"> -->
		<ul class="left">
			<li class="name">
				<h1><div id="service_name">MIKAN</div></h1>
			</li>
		</ul>

		<section class="top-bar-section">
			<ul class="right">
				<li class="has-dropdown">
					<a href="/"><span style="margin-right:6px;"><%= image_tag("user_image.png") %></span>Mikan Taro</a>
					<ul class="dropdown">
						<li><a href="#">Sign out</a></li>
					</ul>
				</li>
			</ul>
		</section>
	</nav>
</div>

<!-- body -->
<div style="margin: 0px auto 0 auto;">
	<div class="off-canvas-wrap">
		<div class="inner-wrap">
			<nav class="tab-bar">
				<section class="left-small">
					<a class="left-off-canvas-toggle menu-icon" ><span></span></a>
				</section>
				<section class="middle tab-bar-section" style="text-align: center">
					<h2 class="title">Sake    -    <i class="fa fa-twitter fa-1g"></i>Twitter    -    1 Day</h2>
				</section>
			</nav>
			<!-- Off Canvas Menu -->
			<aside class="left-off-canvas-menu">
				<!-- whatever you want goes here -->
				<ul class="off-canvas-list">
					<li><label>Category</label></li>
					<li><%= link_to 'Sake', root_path %></li>
					<li><%= link_to 'Wine', root_path %></li>
					<li><%= link_to 'Bear', root_path %></li>
					<li><%= link_to 'Shochu', root_path %></li>
					<li><label><i class="fa fa-search fa-lg fa-fw"></i>Data Source</label></li>
					<li><%= link_to root_path do %><i class="fa fa-twitter fa-lg fa-fw"></i> Twitter<% end %></li>
					<li><%= link_to root_path do %><i class="fa fa-facebook fa-lg fa-fw"></i> Facebook<% end %></li>
					<li><%= link_to root_path do %><i class="fa fa-google-plus fa-lg fa-fw"></i> Google+<% end %></li>
					<li><label>Search Period</label></li>
					<li><%= link_to '1 Day', root_path %></li>
					<li><%= link_to '1 Week', root_path %></li>
					<li><%= link_to '1 Month', root_path %></li>
				</ul>
			</aside>
			<!-- bubble area -->
			<div style="width:100%;">
				<div id="container" style="margin: 24px auto 0 auto;">
				</div>
			</div>
			<!-- close the off-canvas menu -->
			<a class="exit-off-canvas"></a>
		</div>
	</div>


</div>
